.Layout
	display flex
	padding .5em
	margin .5em
	test()
	flex-direction column
	justify-content space-between
	min-height 100vh
	background-image url('../images/city.jpg')
	background-size cover
	> section 		
		margin .5em
	&-main 
		display flex
		justify-content space-between
	&-status
		width 200px
		test(green)
	&-battle
		test(orange)
		flex 1
		margin 0 .5em
		background-image url('../images/pattern.jpg')
	&-phases
		test(purple)
		width 200px	
		position relative
	&-antagonist
		test(lightblue)
		display flex
		justify-content space-between
	&-player
		test(gray)
		display flex
		justify-content space-between
